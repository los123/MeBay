<%= form_for(@ad,:url=>{:action=>'create'}) do |f| %>
  <div class="field">
    <%= f.label :Name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :Description %><br />
    <%= f.text_area :description, rows: 10 %>
  </div>
  <div class="field">
    <%= f.label :Price %><br />
    <%= f.text_field :price %>
  </div>
   <div class="field">
    <%= f.label :Seller %><br />
    <%= f.text_field :seller_id %>
  </div>
  <div class="field">
    <%= f.label "E-mail" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
  <%= f.label "Image URL" %><br />
    <%= f.text_field :img_url %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>